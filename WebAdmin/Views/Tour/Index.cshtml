    <script>

        $(document).ready(function () {
            LoadDiaDiemThamQuan();
            LoadDiaDiemThamQuan_UpdateModalOnChange();
        });

        function LoadInfoModalAdd() {

            //Load loại hình du lịch
            document.getElementById('dropdownLoaiHinhDuLich').options.length = 0; //clear dropdown

            $('#dropdownLoaiHinhDuLich').append($('<option>', {
                value: 0,
                text: "-- Chọn loại hình du lịch --"
            }));

            $.ajax({
                url: "/LoaiHinhDuLich/GetAllLoaiHinhDuLich",
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    $.each(result, function (index) {
                        $('#dropdownLoaiHinhDuLich').append($('<option>', {
                            value: result[index].maLoaiHinhDuLich,
                            text: result[index].tenLoaiHinhDuLich
                        }));
                    })
                },
                error: function (errorMessage) {
                    alert(errorMessage.responseText);
                }
            });

            //Load địa điểm
            document.getElementById('dropdownDiaDiemDen').options.length = 0; //clear dropdown

            $('#dropdownDiaDiemDen').append($('<option>', {
                value: 0,
                text: "-- Chọn địa điểm đến --"
            }));

            $.ajax({
                url: "/DiaDiem/GetAllDiaDiemDen",
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    $.each(result, function (index) {
                        $('#dropdownDiaDiemDen').append($('<option>', {
                            value: result[index].maDiaDiemDen,
                            text: result[index].tenDiaDiemDen
                        }));
                    })
                },
                error: function (errorMessage) {
                    alert(errorMessage.responseText);
                }
            });

        }

        function LoadInfoModalUpdate() {

            //Load loại hình du lịch
            document.getElementById('dropdownLoaiHinhDuLich_Edit').options.length = 0; //clear dropdown

            $('#dropdownLoaiHinhDuLich_Edit').append($('<option>', {
                value: 0,
                text: "-- Chọn loại hình du lịch --"
            }));

            $.ajax({
                url: "/LoaiHinhDuLich/GetAllLoaiHinhDuLich",
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    $.each(result, function (index) {
                        $('#dropdownLoaiHinhDuLich_Edit').append($('<option>', {
                            value: result[index].maLoaiHinhDuLich,
                            text: result[index].tenLoaiHinhDuLich
                        }));
                    })
                },
                error: function (errorMessage) {
                    alert(errorMessage.responseText);
                }
            });

            //Load địa điểm
            document.getElementById('dropdownDiaDiemDen_Edit').options.length = 0; //clear dropdown

            $('#dropdownDiaDiemDen_Edit').append($('<option>', {
                value: 0,
