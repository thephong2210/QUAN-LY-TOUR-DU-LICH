                }
            });

        }

        //Load địa điểm tham quan theo địa điểm đến
        function LoadDiaDiemThamQuan() {

            //Khi dropdown địa điểm đến thay đổi => load danh sach dia diem tham quan trong dia diem den nay
            $('#dropdownDiaDiemDen').on('change', function () {
                var _maDiaDiemDen = $('#dropdownDiaDiemDen').val();

                //clear truoc khi load
                $('#listDiaDiemThamQuan input').remove();
                $('#listDiaDiemThamQuan label').remove();
                $('#listDiaDiemThamQuan br').remove();

                $.ajax({
                    url: "/DiaDiem/GetDetailsDDTQ",
                    data: { maDiaDiemDen: _maDiaDiemDen },
                    type: "GET",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        $.each(result, function (index) {
                            $('#listDiaDiemThamQuan').append($('<input type="checkbox" id="' + result[index].maDiaDiem + '" name="listCheckedDDTQ" value="' + result[index].maDiaDiem + '" />'));
                            $('#listDiaDiemThamQuan').append($('<label class="form-label" for="' + result[index].maDiaDiem + '"> ' + result[index].tenDiaDiem + '</label><br>'));

                        })
                    },
                    error: function (errorMessage) {
                        alert(errorMessage.responseText);
                    }
                });

            });


        }

        function LoadDiaDiemThamQuan_UpdateModalOnChange() {

            //Khi dropdown địa điểm đến thay đổi => load danh sach dia diem tham quan trong dia diem den nay
            $('#dropdownDiaDiemDen_Edit').on('change', function () {
                var _maDiaDiemDen = $('#dropdownDiaDiemDen_Edit').val();
                //clear truoc khi load
                $('#listDiaDiemThamQuan_Edit input').remove();
                $('#listDiaDiemThamQuan_Edit label').remove();
                $('#listDiaDiemThamQuan_Edit br').remove();

                $.ajax({
                    url: "/DiaDiem/GetDetailsDDTQ",
                    data: { maDiaDiemDen: _maDiaDiemDen },
                    type: "GET",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        $.each(result, function (index) {
                            $('#listDiaDiemThamQuan_Edit').append($('<input type="checkbox" id="' + result[index].maDiaDiem + '" name="listCheckedDDTQ_Edit" value="' + result[index].maDiaDiem + '" />'));
                            $('#listDiaDiemThamQuan_Edit').append($('<label class="form-label" for="' + result[index].maDiaDiem + '"> ' + result[index].tenDiaDiem + '</label><br>'));

                        })
                    },
                    error: function (errorMessage) {
                        alert(errorMessage.responseText);
                    }
                });
            });
        }

        function LoadDiaDiemThamQuan_UpdateModalOnClick(maDiaDiemDen) {

            //Khi dropdown địa điểm đến thay đổi => load danh sach dia diem tham quan trong dia diem den nay
           
                //clear truoc khi load
                $('#listDiaDiemThamQuan_Edit input').remove();
                $('#listDiaDiemThamQuan_Edit label').remove();
                $('#listDiaDiemThamQuan_Edit br').remove();

                $.ajax({
                    url: "/DiaDiem/GetDetailsDDTQ?maDiaDiemDen=" + maDiaDiemDen,
                    type: "GET",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        $.each(result, function (index) {
                            $('#listDiaDiemThamQuan_Edit').append($('<input type="checkbox" id="' + result[index].maDiaDiem + '" name="listCheckedDDTQ_Edit" value="' + result[index].maDiaDiem + '" />'));
                            $('#listDiaDiemThamQuan_Edit').append($('<label class="form-label" for="' + result[index].maDiaDiem + '"> ' + result[index].tenDiaDiem + '</label><br>'));

                        })
                    },
                    error: function (errorMessage) {
                        alert(errorMessage.responseText);
                    }
                });

          
        }


        function Add() {
            var _tenGoiTour = $('#inputTenGoiTour').val();
            var _dacDiemTour = $('#inputDacDiemTour').val();
            var _thoiGianBatDau = $('#inputThoiGianBatDau').val();
            var _thoiGianKetThuc = $('#inputThoiGianKetThuc').val();
            var _dropdownLoaiHinhDuLich = $('#dropdownLoaiHinhDuLich').val(); //nếu =0 thì chưa chọn
            var _dropdownDiaDiemDen = $('#dropdownDiaDiemDen').val();//nếu =0 thì chưa chọn
            var _listCheckedDDTQ = $('input[name=listCheckedDDTQ]:checked');

            _listCheckedDDTQ.each(function () {
