@{
    ViewBag.Title = "Tour";

    List<TourView> listTour = ViewBag.listTemp;
}

<div class="app-wrapper">

    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">

            <div class="row g-3 mb-4 align-items-center justify-content-between">
                <div class="col-auto">
                    <h1 class="app-page-title mb-0">Quản lý tour</h1>
                </div>
                <div class="col-auto">
                    <div class="page-utilities">
                        <div class="row g-2 justify-content-start justify-content-md-end align-items-center">
                            <div class="col-auto">
                                <form class="table-search-form row gx-1 align-items-center">
                                    <div class="col-auto">
                                        <input type="text" id="search-orders" name="searchorders" class="form-control search-orders" placeholder="Search">
                                    </div>
                                    <div class="col-auto">
                                        <button type="submit" class="btn app-btn-secondary">Search</button>
                                    </div>
                                </form>

                            </div><!--//col-->
                            <div class="col-auto">

                                <select class="form-select w-auto">
                                    <option selected value="option-1">All</option>
                                    <option value="option-2">This week</option>
                                    <option value="option-3">This month</option>
                                    <option value="option-4">Last 3 months</option>

                                </select>
                            </div>
                            <div class="col-auto">
                                <a class="btn btn-success" style="color: white;" data-bs-toggle="modal" data-bs-target="#AddModal" onclick="LoadInfoModalAdd()"><i class="fas fa-plus"></i> Thêm mới</a>

                            </div>
                        </div><!--//row-->
                    </div><!--//table-utilities-->
                </div><!--//col-auto-->
            </div><!--//row-->



            <div class="tab-content" id="orders-table-tab-content">
                <div class="tab-pane fade show active" id="orders-all" role="tabpanel" aria-labelledby="orders-all-tab">
                    <div class="app-card app-card-orders-table shadow-sm mb-5">
                        <div class="app-card-body">
                            <div class="table-responsive">
                                <table class="table app-table-hover mb-0 text-left">
                                    <thead>
                                        <tr>
                                            <th class="cell">Mã số tour</th>
                                            <th class="cell">Tên gọi tour</th>
                                            <th class="cell">Tên loại hình du lịch</th>
                                            <th class="cell">Tên địa điểm đến</th>
                                            <th class="cell">Thời gian bắt đầu</th>
                                            <th class="cell">Thời gian kết thúc</th>
                                            <th class="cell"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in listTour.OrderByDescending(t => t.maSoTour))
                                        {
                                            <tr>
                                                <td class="cell">@item.maSoTour</td>
                                                <td class="cell"><span class="truncate">@item.tenGoiTour</span></td>
                                                <td class="cell">@item.tenLoaiHinhDuLich</td>
                                                <td class="cell">@item.tenDiaDiem</td>
                                                <td class="cell"><span>@item.thoiGianBatDau</span></td>
                                                <td class="cell"><span>@item.thoiGianKetThuc</span></td>
                                                <td class="cell">
                                                    <a class="btn btn-warning" style="color: white;" data-bs-toggle="modal" data-bs-target="#EditModal" onclick="GetIDUpdate(@item.maSoTour)"><i class="fas fa-pencil-alt"></i> Sửa</a>
                                                    <a class="btn btn-danger" style="color: white;" data-bs-toggle="modal" data-bs-target="#DeleteModal" id="deleteButton" onclick="GetIDDelete(@item.maSoTour)"><i class="fas fa-trash-alt"></i> Xóa</a>
                                                    <a class="btn btn-info" style="color: white;" data-bs-toggle="modal" data-bs-target="#BangGiaModal" id="bangGiaButton" onclick="GetIDTourBangGia(@item.maSoTour)"><i class="fas fa-trash-alt"></i> Xem bảng giá</a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div><!--//table-responsive-->

                        </div><!--//app-card-body-->
                    </div><!--//app-card-->
                    <nav class="app-pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav><!--//app-pagination-->

                </div><!--//tab-pane-->


            </div><!--//tab-content-->



        </div><!--//container-fluid-->
    </div><!--//app-content-->
    <!-- Modal Add -->
    <div class="modal fade" id="AddModal" tabindex="-1" role="dialog" aria-labelledby="AddModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><i class="fas fa-plus"></i> Thêm tour</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="app-card app-card-settings shadow-sm p-4">
                    <div class="app-card-body">
                        <div class="settings-form">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Tên gọi tour</label>
                                    <input type="text" class="form-control" style="border-color: #6e6e6f;" id="inputTenGoiTour" placeholder="Nhập tên gọi tour..." required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Đặc điểm</label>
                                    <textarea rows="3" class="form-control" style="border-color: #6e6e6f;" id="inputDacDiemTour" placeholder="Nhập đặc điểm tour..." required></textarea>
                                </div>
                                <div class="mb-3">
                                    <select class="form-select" aria-label="Default select example" id="dropdownLoaiHinhDuLich" style="border-color: #6e6e6f;">
                                        <option value="0" selected>-- Chọn loại hình du lịch --</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <input class="form-control" type="datetime-local" id="inputThoiGianBatDau" name="inputThoiGianBatDau" style="border-color: #6e6e6f;" required>
                                </div>
                                <div class="mb-3">
                                    <input class="form-control" type="datetime-local" id="inputThoiGianKetThuc" name="inputThoiGianKetThuc" style="border-color: #6e6e6f;" required>
                                </div>
                                <div class="mb-3">
                                    <select class="form-select" aria-label="Default select example" id="dropdownDiaDiemDen" style="border-color: #6e6e6f;" >
                                        <option value="0" selected>--Chọn địa điểm đến --</option>
                                    </select>
                                </div>
                                <div class="mb-3" style="border: 1px solid #6e6e6f; padding: 5px; border-radius: 5px;" id="listDiaDiemThamQuan">
                                   
                                </div>
                            </div>
                            <div class="modal-footer">
                                <input type="button" id="btnAdd" class="btn app-btn-primary" onclick="return Add()" value="Thêm" style="color: white;float:left;" />
                                <button class="btn btn-secondary" data-bs-dismiss="modal" style="color: white;">Đóng</button>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Edit -->
    <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="EditModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><i class="fas fa-pen"></i> Sửa địa điểm đến</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="app-card app-card-settings shadow-sm p-4">
                    <div class="app-card-body">
                        <div class="settings-form">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Mã địa điểm đến</label>
                                    <input type="text" class="form-control" style="border-color: #6e6e6f;" id="inputMaDiaDiemDenEdit" required readonly />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Tên địa điểm đến</label>
                                    <input type="text" class="form-control" style="border-color: #6e6e6f;" id="inputTenDiaDiemDenEdit" required />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <input type="button" id="btnAdd" class="btn btn-warning" onclick="return Update()" value="Sửa" style="color: white;float:left;" />
                                <button class="btn btn-secondary" data-bs-dismiss="modal" style="color: white;">Đóng</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Delete -->
    <div class="modal fade" id="DeleteModal" tabindex="-1" aria-labelledby="DeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Xác nhận xóa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <span>Bạn có chắc muốn xóa địa điểm mã <span id="maDiaDiemDenDeleteModal" style="font-weight: 500;"></span> không?</span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="btnDelete" onclick="Delete()" style="color: white;">Xóa</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal DiaDiemThamQuan -->
    <div class="modal fade" id="DiaDiemThamQuanModal" tabindex="-1" aria-labelledby="DiaDiemThamQuanModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Địa điểm tham quan</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="app-card app-card-settings shadow-sm p-4">
                    <div class="app-card-body">
                        <div class="settings-form">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Mã địa điểm đến</label>
                                    <input type="text" class="form-control" style="border-color: #6e6e6f;" id="inputMaDiaDiemDen_ModalDDTQ" required readonly />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Tên địa điểm đến</label>
                                    <input type="text" class="form-control" style="border-color: #6e6e6f;" id="inputTenDiaDiemDen_ModalDDTQ" required readonly />
                                </div>
                                <hr />
                                <div class="mb-3">
                                    <label class="form-label">Tên địa điểm tham quan</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" style="border-color: #6e6e6f;" id="inputTenDDTQ_ModalDDTQ" />
                                        <button class="btn btn-success" style="color: white;" onclick="AddToListDDTQ()">Thêm</button>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <select class="form-select" multiple aria-label="select example" id="listDiaDiemThamQuan">
                                    </select>
                                    @*<div style="margin-top: 10px;">
                                            <button class="btn btn-danger" style="color: white;float: left;">Xóa</button>
                                            <button class="btn btn-danger" style="color: white;float: right;">Xóa tất cả</button>
                                        </div>*@
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @*<button class="btn btn-warning" id="btnDelete" onclick="Delete()" style="color: white;">Cập nhật</button>*@
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    
    

    <script>

        $(document).ready(function () {
            LoadDiaDiemThamQuan();
        });

        function LoadInfoModalAdd() {
        
            //Load loại hình du lịch
            document.getElementById('dropdownLoaiHinhDuLich').options.length = 0; //clear dropdown

            $('#dropdownLoaiHinhDuLich').append($('<option>', {
                value: 0,
                text: "-- Chọn loại hình du lịch --"
            }));

            $.ajax({
                url: "/LoaiHinhDuLich/GetAllLoaiHinhDuLich",
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    $.each(result, function (index) {
                        $('#dropdownLoaiHinhDuLich').append($('<option>', {
                            value: result[index].maLoaiHinhDuLich,
                            text: result[index].tenLoaiHinhDuLich
                        }));
                    })
                },
                error: function (errorMessage) {
                    alert(errorMessage.responseText);
                }
            });

            //Load địa điểm
            document.getElementById('dropdownDiaDiemDen').options.length = 0; //clear dropdown

            $('#dropdownDiaDiemDen').append($('<option>', {
                value: 0,
                text: "-- Chọn địa điểm đến --"
            }));

            $.ajax({
                url: "/DiaDiem/GetAllDiaDiemDen",
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    $.each(result, function (index) {
                        $('#dropdownDiaDiemDen').append($('<option>', {
                            value: result[index].maDiaDiemDen,
                            text: result[index].tenDiaDiemDen
                        }));
                    })
                },
                error: function (errorMessage) {
                    alert(errorMessage.responseText);
                }
            });

            

        }

        //Load địa điểm tham quan theo địa điểm đến
        function LoadDiaDiemThamQuan() {

            //Khi dropdown địa điểm đến thay đổi => load danh sach dia diem tham quan trong dia diem den nay
            $('#dropdownDiaDiemDen').on('change', function () {
                var _maDiaDiemDen = $('#dropdownDiaDiemDen').val();

                //clear truoc khi load
                $('#listDiaDiemThamQuan input').remove();
                $('#listDiaDiemThamQuan label').remove();
                $('#listDiaDiemThamQuan br').remove();

                $.ajax({
                    url: "/DiaDiem/GetDetailsDDTQ",
                    data: { maDiaDiemDen: _maDiaDiemDen },
                    type: "GET",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        $.each(result, function (index) {
                            $('#listDiaDiemThamQuan').append($('<input type="checkbox" id="' + result[index].maDiaDiem + '" name="listCheckedDDTQ" value="' + result[index].maDiaDiem + '" />'));
                            $('#listDiaDiemThamQuan').append($('<label class="form-label" for="' + result[index].maDiaDiem + '"> ' + result[index].tenDiaDiem + '</label><br>'));

                        })
                    },
                    error: function (errorMessage) {
                        alert(errorMessage.responseText);
                    }
                });

            });

        }
        

        function Add() {
            var _tenGoiTour = $('#inputTenGoiTour').val();
            var _dacDiemTour = $('#inputDacDiemTour').val();
            var _thoiGianBatDau = $('#inputThoiGianBatDau').val();
            var _thoiGianKetThuc = $('#inputThoiGianKetThuc').val();
            var _dropdownLoaiHinhDuLich = $('#dropdownLoaiHinhDuLich').val(); //nếu =0 thì chưa chọn
            var _dropdownDiaDiemDen = $('#dropdownDiaDiemDen').val();//nếu =0 thì chưa chọn
            var _listCheckedDDTQ = $('input[name=listCheckedDDTQ]:checked');

            _listCheckedDDTQ.each(function () {
                console.log((this.checked ? $(this).text() : ""));
            });

            if (_tenGoiTour == '' || _dacDiemTour == '' ||
                _thoiGianBatDau == '' || _thoiGianKetThuc == '' ||
                _dropdownLoaiHinhDuLich == 0 || _dropdownDiaDiemDen == 0 || _listCheckedDDTQ.length == 0) {
                swal({
                    title: "Không được để trống!",
                    text: "Vui lòng nhập đầy đủ thông tin!",
                    icon: "warning",
                    button: "Đóng",
                });
            } else {
                if (_thoiGianBatDau > _thoiGianKetThuc) {
                    swal({
                        title: "Thời gian bắt đầu phải NHỎ HƠN thời gian kết thúc!",
                        text: "Vui lòng nhập đúng thông tin!",
                        icon: "warning",
                        button: "Đóng",
                    });
                } else {
                    //Thêm list địa điểm tham quan vào tour
                    //get mã tour mới nhất + 1, sau đó loop để thêm diadiemtour
                    $.ajax({
                        url: "/Tour/GetTourLatest",
                        type: "GET",
                        contentType: "application/json;charset=utf-8",
                        dataType: "json",
                        success: function (result) {
                            var _maSoTourNew = result.maSoTour + 1;

                            _listCheckedDDTQ.each(function () {
                                console.log((this.checked ? $(this).text() : ""));//test get ten DDTQ

                                var objDiaDiemTour = {
                                    maTour: _maSoTourNew,
                                    tenDiaDiemThamQuan: (this.checked ? $(this).next('label').text() : "")
                                };

                                $.ajax({
                                    url: "/DiaDiem/CreateDiaDiemTour",
                                    data: JSON.stringify(objDiaDiemTour),
                                    type: "POST",
                                    contentType: "application/json;charset=utf-8",
                                    dataType: "json",
                                    success: function (result) {
                                        console.log("Thêm địa điểm tour thành công!");
                                    },
                                    error: function (errorMessage) {
                                        alert(errorMessage.responseText);
                                    }
                                });

                            });

                        },
                        error: function (errorMessage) {
                            alert(errorMessage.responseText);
                        }
                    });

                    //Thêm tour
                    var objTour = {
                        tenGoiTour: _tenGoiTour,
                        dacDiem: _dacDiemTour,
                        maLoaiHinhDuLich: _dropdownLoaiHinhDuLich,
                        thoiGianBatDau: _thoiGianBatDau,
                        thoiGianKetThuc: _thoiGianKetThuc,
                        maDiaDiemDen: _dropdownDiaDiemDen,
                        idGiaTour: null,
                        trangThai: 1
                    };

                    $.ajax({
                        url: "/Tour/Create",
                        data: JSON.stringify(objTour),
                        type: "POST",
                        contentType: "application/json;charset=utf-8",
                        dataType: "json",
                        success: function (result) {
                            $('#AddModal').modal('hide');
                            swal({
                                title: "Thêm thành công!",
                                icon: "success",
                                timer: 2000
                            })
                            window.setTimeout(function () { location.reload() }, 2000)
                        },
                        error: function (errorMessage) {
                            alert(errorMessage.responseText);
                        }
                    });
                }
                
            }
        }

        function Update() {
            var _maDiaDiemDen = $('#inputMaDiaDiemDenEdit').val();

            var _tenDiaDiemDen = $('#inputTenDiaDiemDenEdit').val();


            if (_tenDiaDiemDen == '') {
                swal({
                    title: "Không được để trống!",
                    text: "Vui lòng nhập đầy đủ thông tin!",
                    icon: "warning",
                    button: "Đóng",
                });
            } else {
                var objDiaDiemDen = {
                    maDiaDiemDen: _maDiaDiemDen,
                    tenDiaDiemDen: _tenDiaDiemDen,
                    trangThai: 1
                };
                $.ajax({
                    url: "/DiaDiem/Update",
                    data: JSON.stringify(objDiaDiemDen),
                    type: "POST",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        $('#EditModal').modal('hide');
                        swal({
                            title: "Sửa thành công địa điểm mã " + _maDiaDiemDen + "!",
                            icon: "success",
                            timer: 2500
                        })
                        window.setTimeout(function () { location.reload() }, 2500)
                    },
                    error: function (errorMessage) {
                        alert(errorMessage.responseText);
                    }
                });
            }
        }

        //Truyền data id vào modal
        function GetIDUpdate(maDiaDiemDen) {
            $('#inputMaDiaDiemDenEdit').val(maDiaDiemDen);
            var _maDiaDiemDen = maDiaDiemDen;

            $.ajax({
                url: "/DiaDiem/GetOneDiaDiemDen?maDiaDiemDen=" + _maDiaDiemDen,
                type: "GET",
                contentType: "application/json; charset=UTF-8",
                dataType: "json",
                success: function (result) {
                    $('#inputTenDiaDiemDenEdit').val(result[0].tenDiaDiemDen);
                },
                error: function (errorMessage) {
                    alert(errorMessage.responseText);
                }
            });
        }

        function GetIDDiaDiemThamQuan(maDiaDiemDen) {
            $('#inputMaDiaDiemDen_ModalDDTQ').val(maDiaDiemDen);
            var _maDiaDiemDen = maDiaDiemDen;

            document.getElementById("listDiaDiemThamQuan").options.length = 0;

            $.ajax({
                url: "/DiaDiem/GetOneDiaDiemDen?maDiaDiemDen=" + _maDiaDiemDen,
                type: "GET",
                contentType: "application/json; charset=UTF-8",
                dataType: "json",
                success: function (result) {
                    $('#inputTenDiaDiemDen_ModalDDTQ').val(result[0].tenDiaDiemDen);
                },
                error: function (errorMessage) {
                    alert(errorMessage.responseText);
                }
            });

            $.ajax({
                url: "/DiaDiem/GetDetailsDDTQ?maDiaDiemDen=" + _maDiaDiemDen,
                type: "GET",
                contentType: "application/json; charset=UTF-8",
                dataType: "json",
                success: function (result) {
                    $.each(result, function (index) {
                        $('#listDiaDiemThamQuan').append($('<option>', {
                            value: result[index].maDiaDiem,
                            text: result[index].tenDiaDiem
                        }));

                    })

                },
                error: function (errorMessage) {
                    alert(errorMessage.responseText);
                }
            });
        }

        function AddToListDDTQ() {
            var _tenDDTQ = $('#inputTenDDTQ_ModalDDTQ').val();
            var _maDiaDiemDen = $('#inputMaDiaDiemDen_ModalDDTQ').val();

            var postData = {
                tenDiaDiem: _tenDDTQ,
                maDiaDiemDen: _maDiaDiemDen
            };

            $.ajax({
                url: "/DiaDiem/CreateDDTQ",
                type: "POST",
                data: JSON.stringify(postData),
                contentType: "application/json; charset=UTF-8",
                dataType: "json",
                success: function (result) {
                    $('#listDiaDiemThamQuan').append($('<option>', {
                        value: _tenDDTQ,
                        text: _tenDDTQ
                    }));

                    swal({
                        title: "Thêm thành công địa điểm tham quan!",
                        icon: "success",
                        timer: 2500
                    })
                },
                error: function (errorMessage) {
                    alert(errorMessage.responseText);
                }
            });

        }

        function GetIDDelete(maDiaDiemDen) {
