<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title - Tour App</title>

    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="description" content="Portal - Bootstrap 5 Admin Dashboard Template For Developers">
    <meta name="author" content="Xiaoying Riley at 3rd Wave Media">
    <link rel="shortcut icon" href="~/Content/images/favicon.ico">

    <!-- FontAwesome JS-->
    <script defer src="~/Content/plugins/fontawesome/js/all.min.js"></script>
    <!-- App CSS -->
    <link id="theme-style" rel="stylesheet" href="~/Content/css/portal.css">
    <link id="theme-style" rel="stylesheet" href="~/Content/css/preloader.css">

    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/sweetalert.min.js"></script>

    <script>
        setTimeout(function () {
            $('.loader-bg').fadeToggle();
        }, 1000);
    </script>

</head>

<body>
    <!-- Preloader -->
    <div class="loader-bg">
        <div class="loader-p"></div>
    </div>

    <div class="app">

        <header class="app-header fixed-top">
            <div class="app-header-inner">
                <div class="container-fluid py-2">
                    <div class="app-header-content">
                        <div class="row justify-content-between align-items-center">

                            <div class="col-auto">
                                <a id="sidepanel-toggler" class="sidepanel-toggler d-inline-block d-xl-none" href="#">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 30 30" role="img"><title>Menu</title><path stroke="currentColor" stroke-linecap="round" stroke-miterlimit="10" stroke-width="2" d="M4 7h22M4 15h22M4 23h22"></path></svg>
                                </a>
                            </div><!--//col-->
                            <div class="search-mobile-trigger d-sm-none col">
                                <i class="search-mobile-trigger-icon fas fa-search"></i>
                            </div><!--//col-->

                            <div class="app-utilities col-auto">
                                <div class="app-utility-item app-notifications-dropdown dropdown">
                                    <a class="dropdown-toggle no-toggle-arrow" id="notifications-dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false" title="Notifications">
                                        <!--//Bootstrap Icons: https://icons.getbootstrap.com/ -->
                                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-bell icon" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2z" />
                                            <path fill-rule="evenodd" d="M8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5.002 5.002 0 0 1 13 6c0 .88.32 4.2 1.22 6z" />
                                        </svg>
                                        <span class="icon-badge">1</span>
                                    </a><!--//dropdown-toggle-->

                                    <div class="dropdown-menu p-0" aria-labelledby="notifications-dropdown-toggle">
                                        <div class="dropdown-menu-header p-3">
                                            <h5 class="dropdown-menu-title mb-0">Thông báo</h5>
                                        </div><!--//dropdown-menu-title-->
                                        <div class="dropdown-menu-content">
                                            <div class="item p-3">
                                                <div class="row gx-2 justify-content-between align-items-center">
                                                    <div class="col-auto">
                                                        <img class="profile-image" src="~/Content/images/icons8-github.gif" alt="">
                                                    </div><!--//col-->
                                                    <div class="col">
                                                        <div class="info">
                                                            <div class="desc">Nội dung thông báo. </div>
                                                            <div class="meta"> 2 tiếng trước</div>
                                                        </div>
                                                    </div><!--//col-->
                                                </div><!--//row-->
                                                <a class="link-mask" href="#	"></a>
                                            </div><!--//item-->

                                        </div><!--//dropdown-menu-content-->

                                        <div class="dropdown-menu-footer p-2 text-center">
                                            <a href="#">Xem tất cả</a>
                                        </div>

                                    </div><!--//dropdown-menu-->
                                </div><!--//app-utility-item-->


                                <div class="app-utility-item app-user-dropdown dropdown">
                                    <a class="dropdown-toggle" id="user-dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false"><img src="~/Content/images/icons8-github.gif" alt="user profile"></a>
                                    <ul class="dropdown-menu" aria-labelledby="user-dropdown-toggle">
                                        <li><a class="dropdown-item" href="#">Nhóm 11</a></li>
                                    </ul>
                                </div><!--//app-user-dropdown-->
                            </div><!--//app-utilities-->
                        </div><!--//row-->
                    </div><!--//app-header-content-->
                </div><!--//container-fluid-->
            </div><!--//app-header-inner-->
            <div id="app-sidepanel" class="app-sidepanel">
                <div id="sidepanel-drop" class="sidepanel-drop"></div>
                <div class="sidepanel-inner d-flex flex-column">
                    <a href="#" id="sidepanel-close" class="sidepanel-close d-xl-none">&times;</a>
                    <div class="app-branding">
                        <a class="app-logo" href="index.html"><img class="logo-icon me-2" src="~/Content/images/app-logo.svg" alt="logo"><span class="logo-text">QUẢN LÝ TOUR</span></a>

                    </div><!--//app-branding-->

                    <nav id="app-nav-main" class="app-nav app-nav-main flex-grow-1">
                        <ul class="app-menu list-unstyled accordion" id="menu-accordion">
                            <li class="nav-item">
                                <a class="nav-link @{if (ViewBag.Title.Equals("Tổng quan")) {@Html.Encode("active"); }}" href="@Url.Action("Index", "TongQuan")">
                                    <span class="nav-icon">
                                        <img src="~/Content/images/icons/country-house.png" />
                                    </span>
                                    <span class="nav-link-text">Tổng quan</span>
                                </a><!--//nav-link-->
                            </li><!--//nav-item-->

                            <li class="nav-item">
                                <a class="nav-link @{if (ViewBag.Title.Equals("Tour")) {@Html.Encode("active"); }}" href="@Url.Action("Index","Tour")">
                                    <span class="nav-icon">
                                        <img src="~/Content/images/icons/tourniquet.png" />
                                    </span>
                                    <span class="nav-link-text">Tour</span>
                                </a><!--//nav-link-->
                            </li><!--//nav-item-->

                            <li class="nav-item">
                                <a class="nav-link @{if (ViewBag.Title.Equals("Đoàn du lịch")) {@Html.Encode("active"); }}" href="@Url.Action("Index","DoanDuLich")">
                                    <span class="nav-icon">
                                        <img src="~/Content/images/icons/tour-bus.png" />
                                    </span>
                                    <span class="nav-link-text">Đoàn du lịch</span>
                                </a><!--//nav-link-->
                            </li><!--//nav-item-->

                            <li class="nav-item">
                                <a class="nav-link @{if (ViewBag.Title.Equals("Nhân viên")) {@Html.Encode("active"); }}" href="@Url.Action("Index","NhanVien")">
                                    <span class="nav-icon">
                                        <img src="~/Content/images/icons/conference-background-selected.png" />
                                    </span>
                                    <span class="nav-link-text">Nhân viên</span>
                                </a><!--//nav-link-->
                            </li><!--//nav-item-->

                            <li class="nav-item">
                                <a class="nav-link @{if (ViewBag.Title.Equals("Khách hàng")) {@Html.Encode("active"); }}" href="@Url.Action("Index","KhachHang")">
                                    <span class="nav-icon">
                                        <img src="~/Content/images/icons/customer-insight--v1.png" />
                                    </span>
                                    <span class="nav-link-text">Khách hàng</span>
                                </a><!--//nav-link-->
                            </li><!--//nav-item-->

                            <li class="nav-item">
                                <a class="nav-link @{if (ViewBag.Title.Equals("Loại hình du lịch")) {@Html.Encode("active"); }}" href="@Url.Action("Index","LoaiHinhDuLich")">
                                    <span class="nav-icon">
                                        <img src="~/Content/images/icons/signpost.png" />
                                    </span>
                                    <span class="nav-link-text">Loại hình du lịch</span>
                                </a><!--//nav-link-->
                            </li><!--//nav-item-->

                            <li class="nav-item">
                                <a class="nav-link @{if (ViewBag.Title.Equals("Địa điểm")) {@Html.Encode("active"); }}" href="@Url.Action("Index","DiaDiem")">
                                    <span class="nav-icon">
                                        <img src="~/Content/images/icons/city-guide.png" />
                                    </span>
                                    <span class="nav-link-text">Địa điểm</span>
                                </a><!--//nav-link-->
                            </li><!--//nav-item-->



                        </ul><!--//app-menu-->
                    </nav><!--//app-nav-->
                    <div class="app-sidepanel-footer">
                        <nav class="app-nav app-nav-footer">
                            <ul class="app-menu footer-menu list-unstyled">
                                <li class="nav-item">
                                    <span class="nav-link-text">Nhóm 11</span>
                                </li><!--//nav-item-->
                            </ul><!--//footer-menu-->
                        </nav>
                    </div><!--//app-sidepanel-footer-->

                </div><!--//sidepanel-inner-->
            </div><!--//app-sidepanel-->
        </header><!--//app-header-->

        <div>
            @RenderBody()
        </div>



        <!-- Javascript -->
        <script src="~/Content/plugins/popper.min.js"></script>
        <script src="~/Content/plugins/bootstrap/js/bootstrap.min.js"></script>

        <!-- Charts JS -->
        <script src="~/Content/plugins/chart.js/chart.min.js"></script>
        <script src="~/Content/js/index-charts.js"></script>

        <!-- Page Specific JS -->
        <script src="~/Content/js/app.js"></script>
        <script src="~/Content/js/jquery.min.js"></script>

    </div>
</body>
</html>
